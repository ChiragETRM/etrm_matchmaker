{
  "name": "curated-job-engine",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate-prod": "tsx scripts/migrate-db.ts",
    "db:setup": "tsx scripts/setup-database.ts",
    "db:diagnose": "tsx scripts/fix-pooler-issue.ts",
    "db:troubleshoot-push": "powershell -ExecutionPolicy Bypass -File scripts/troubleshoot-db-push.ps1",
    "db:sql-supabase": "prisma migrate diff --from-empty --to-schema-datamodel prisma/schema.prisma --script > prisma/supabase-init.sql",
    "db:apply-nextauth-migration": "tsx scripts/apply-nextauth-migration.ts",
    "db:apply-google-profile-migration": "tsx scripts/apply-google-profile-migration.ts",
    "db:fix-auth-schema": "tsx scripts/fix-auth-schema.ts",
    "db:studio": "prisma studio",
    "seed:jobs": "tsx scripts/seed-jobs.ts",
    "db:delete-test-jobs": "tsx scripts/delete-test-jobs.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@prisma/client": "^5.7.1",
    "@tailwindcss/typography": "^0.5.19",
    "@types/nodemailer": "^7.0.9",
    "bcryptjs": "^2.4.3",
    "next": "^14.2.0",
    "next-auth": "^5.0.0-beta.30",
    "nodemailer": "^7.0.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.2",
    "slugify": "^1.6.6",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.x <=22.x"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "postcss": "^8",
    "prisma": "^5.7.1",
    "tailwindcss": "^3.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
