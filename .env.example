# =================================
# Database Configuration (Required)
# =================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/curated_job_engine?schema=public"
# For Supabase, use pooler URL (port 6543)
# DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection for Prisma migrations (only needed for Supabase)
# DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres?sslmode=require"

# =================================
# Application URL (Required)
# =================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =================================
# Authentication - Google SSO (Required)
# =================================
# Generate with: openssl rand -base64 32
AUTH_SECRET="your-random-32-character-secret-here"

# Google OAuth credentials
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =================================
# Optional: File Storage
# =================================
# STORAGE_PROVIDER="SUPABASE"  # or S3, R2
# SUPABASE_URL="https://your-project.supabase.co"
# SUPABASE_KEY="your-supabase-anon-key"

# =================================
# Optional: Email
# =================================
# EMAIL_PROVIDER="POSTMARK"
# POSTMARK_API_KEY="your-postmark-key"
# EMAIL_FROM="noreply@yourdomain.com"

# =================================
# Optional: CAPTCHA
# =================================
# TURNSTILE_SITE_KEY="your-turnstile-site-key"
# TURNSTILE_SECRET_KEY="your-turnstile-secret-key"
